<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.akhil.webkiosk.DetailedAttendance"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ListView android:id="@+id/list1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView android:id="@+id/attendance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#c000"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:text="DETAILED ATTENDANCE"/>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="22dp"
    android:layout_below="@+id/attendance"
    android:background="@color/colorPrimaryDark"
    android:id="@+id/relativeLayout">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Date"
        android:id="@+id/name"
        android:textColor="#E5e5e5"
        android:textStyle="bold"
        android:paddingLeft="20dp"/>

    <View
        android:layout_width="2dp"
        android:layout_height="2000dp"
        android:paddingRight="40dp"
        android:background="#000000" />
    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/name"
        android:textColor="#E5e5e5"
        android:text="Time"
        android:textStyle="bold"
        android:paddingLeft="50dp"/>
    <View
        android:layout_width="2dp"
        android:layout_height="2000dp"
        android:paddingRight="40dp"
        android:background="#000000" />
    <TextView
        android:id="@+id/sr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#E5e5e5"
        android:layout_toRightOf="@+id/time"
        android:text="Status"
        android:textStyle="bold"
        android:paddingLeft="24dp"/>
    <TextView
        android:id="@+id/cla"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#E5e5e5"
        android:layout_toRightOf="@+id/sr"
        android:text="ClassT."
        android:textStyle="bold"
        android:paddingLeft="5dp"/>
    <TextView
        android:id="@+id/faculty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/cla"
        android:textColor="#E5e5e5"
        android:text="Faculty"
        android:textStyle="bold"
        android:paddingLeft="7dp"/>

</RelativeLayout>
</RelativeLayout>